<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="List of all students" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen"
        xmlns:local2="clr-namespace:WPF.Components"
        >

    <Grid>
        <local2:UsersList x:Name="usersList" Padding="2" />
        <Button Height="20" Width="150" Margin="10" HorizontalAlignment="Left" Click="OpenLogsWindow">Open database logs</Button>
    </Grid>
</Window>
